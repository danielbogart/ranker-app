<div class="container">
  <div class="col-md-12">
  <div class="page-header">
    <h1>Your ranked items sorted by H Index</h1>
  </div>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Happiness</th>
        <th><%= link_to 'H Index', "/items/show/" %></th>
        <th><%= link_to 'Delete All', '/delete_items', :action => 'destroy_all', :method => :destroy_all %></th> <!--what is this line doing?-->
      </tr>
    </thead>
<% if user_signed_in? %>
    <tbody>
      <% @items.order("happines_index DESC").each do |p| %>
      <tr>
        <%= render "shared/items_table", item: p %> 
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
<%= render "shared/form" %>
<% end %>