  <div class="page-header">
    <h1>Your ranked items:</h1>
  </div>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Happiness</th>
        <th>H Index</th>
      </tr>
    </thead>
<% if user_signed_in? %>
    <tbody>
      <% current_user.items.each do |p| %>
      <tr>
        <td>
          <%= p.title %>
        </td>
        <td>
          $<%= p.price %>
        </td> 
        <td>
          <%= p.happiness %>
        </td>
        <td>
          <%= p.happines_index %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<%= render "shared/form" %>
<% end %>