<%= simple_form_for @item do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :price, hint: 'No special characters' %>
    <%= f.input :happiness, collection: 0..10 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
